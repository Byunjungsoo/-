// 변수의 정의 Variable(변수) var  ,  변 할 수있는 문자
//  정수 integer - int에 대해서  정수는 (...-2,-1,0,1,2...) 자연수는 (1,2.....) 변수를 만들때 어떤 데이터타입을 들어갈지 지정
//    ex)      a = 1;    1은 number  -> integer 로 나타냄  int 
public class Variable {

	public static void main(String[] args) {
		
		int a = 1;
		System.out.println(a);

		// 실수를 나타낼때 real number   
		// ex) int b = 1.1; 여기서 문제는 int는 정수만 나타낼수있는데 1.1은 실수이기 때문에 에러 발생
		// real number -> double 로 
		
		double b = 1.1;
		System.out.println(b);
		
		// 문자열을 나타내고 싶을때 지금까지는 숫자를 표현 int, double
		// String은 문자열을 나타내줄수있는 데이터 타입
		
		String c = "hello world";
				System.out.println(c);
		
	}

}






//          data type 변수정의 
//        number --> integer - int       int name = X;       표기방법     
//      real number ---> double        double name = X;
//     문자열 ----> String               String name = X;
